priv-btnpage {
    background-color: #f5f5f5;
}

.userinfo {
    display: flex;
    flex-direction: row;
    /* align-items: left; */
    justify-content: flex-start; /*主轴上对齐方式 flex-start(左对齐) flex-end(右对齐) center(居中)  space-around(均衡排布) space-between(均衡排布 两端对齐)*/
    align-items: center; /*交叉轴对齐方式 flex-start flex-start center stretch baseline(元素内的第一行文字对齐 )*/
}

.authorize-btn {
    height: 35px;
    width: 80px;
    font-size: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white !important;
    border-color: blue !important;
}

.userinfo-avatar {
    width: 120rpx;
    height: 120rpx;
    margin: 60rpx;
    border-radius: 50%;
}

.admin-btn {
    position: relative;
    left: 40rpx;
}

.userinfo-nickname {
    color: #000;
    font-size: 20px;
    font-weight: bold;
}

.usermotto {
    margin-top: 200px;
}

.admin-logon {
    font-size: 25rpx;
    color: green;
    margin: 50rpx;
}

.admin-logout {
    font-size: 25rpx;
    color: grey;
    margin: 50rpx;
}

.vip {
    font-size: 25rpx;
    color: orange;
    margin: 50rpx;
}

.user {
    font-size: 25rpx;
    color: silver;
    margin: 50rpx;
}

.top-btn-view {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: baseline;
    height: 10%;
}

.type-btn {
    height: 35px;
    width: 33.3%;
    font-size: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white !important;
    border-color: white !important;
    border-right: 1px solid gainsboro !important;
    /* border-bottom: 1px solid gainsboro !important; */
    border-radius: 0;
}

.topic-view, .admin-view {
    margin-top: 0;
}

.private-msg-view {
    -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    width: 100%;
    height: 100%;
    align-items: center;
    overflow: hidden;
    position: relative;
    padding-bottom: 0 !important;
}

.priv-btn {
    width: 95%;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-bottom: 5px !important;
    margin-top: 10px !important;
    color: white !important;
    font-size: 13px;
    background-color: black !important;
}
