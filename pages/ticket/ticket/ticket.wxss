.text {
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    -webkit-line-clamp: 4 !important;
    line-height: 20px
}

.image-pen {
    position: fixed;
    bottom: 90px;
    right: 50px;
    background: #b4d145;
    opacity: 0.7;
}


