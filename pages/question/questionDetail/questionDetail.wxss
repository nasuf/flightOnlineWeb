page {
    min-height: 100%;
    position: relative;
    display: flex !important;
    flex-direction: column !important;
    align-items: center;
}

.desc {
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    line-height: 20px;
    color: black !important;
}

.topic-content {
    word-break:break-all;
    font-size: 13px;
}

.weui-panel {
    width: 100%;
}

.weui-media-box.weui-media-box_text.ticket-detail {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.tourism-action {
    align-self: flex-end;
    padding-right: 15rpx;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    align-self: flex-start;
}

.topic-title {
    word-break:break-all;
}

.topic-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.nickname-floor {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.nickname {
    font-size: 20rpx;
}

.floor{
    font-size: 20rpx;
    color: #cecece;
}

.replypostdate {
    font-size: 20rpx;
    color: #cecece;
    align-self: flex-end;
    margin-bottom: 3px;
}

.avatar {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
}

.reply-field {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
    border-bottom: 1rpx solid #f5f5f5;
    padding-bottom: 5px;
}

.replypostdate-action {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: baseline;
}

.reply-panel {
    margin-bottom: 0;
    padding-bottom: 0;
}

.reply-content {
    width: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.beReplied {
    width:80%;
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    -webkit-line-clamp: 4 !important;
    line-height: 25px;
    background-color: #efeeee;
    margin-top: 15rpx;
    padding-top: 0rpx;
    padding-bottom: 20rpx;
    padding-left: 25rpx;
    padding-right: 25rpx;
    align-self: center;
    font-size: 20rpx;
}

.action {
    align-self: flex-end;
}

.weui-media-box__desc.content {
    align-self: flex-start;
}

.weui-media-box__info__meta_extra.action-best-answer {
    border-left: 0px solid;
}

.weui-media-box__info__meta_extra.action-delete {
    padding-right: 0;
}

.weui-media-box__info__meta_extra.topic-comment {
    border-left: 0px solid;
}

.topic-avatar-nickname {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.topic-info {
    font-size: 12px;
    color: gray;
    margin-left: 15px
}

.topic-cnt, .location, .contact {
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    -webkit-line-clamp: 2 !important;
    padding-top: 0 !important;
    margin-top: 0 !important;
}

.title-signUpBtn {
    width: 100%;
    display: flex !important;
    flex-direction: row !important;
    justify-content: space-between !important;
    align-items: baseline !important;
}


.signUpBtn {
    background-color: black !important;
    color: white !important;
    font-size: 12px;
    height: 35px;
    width: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: flex-end;
}

.signUpBtn:active {
    color: gray !important;
}

.best-ans-btn {
    background-color: black !important;
    color: white !important;
    font-size: 10px;
    height: 30px;
    width: 90px;
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: flex-end;
}

.best-ans-btn:active {
    color: gray !important;
}

.contact-action {
    display: flex;
    flex-direction: row;
    justify-content: space-between
}
